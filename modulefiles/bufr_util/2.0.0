#%Module#####################################################
## BUFR utilities
#############################################################
proc ModulesHelp { } {
    puts stderr "Sets environment veriables for BUFR utilities.\n"
}
module-whatis "This module sets the environment variables for BUFR utilities.\n"

# an Intel compiler module must already be loaded
prereq ips

# a prod_util module must also already be loaded, because finddate.sh is called
# from within run_apxdx.sh
prereq prod_util

set	name		bufr_util
set	version		2.0.0
set	envir		prod

set	vstring		v${version}
setenv	BUFR_UTIL_VER	${vstring}

#set	base		/gpfs/dell1/nco/ops/nw${envir}/${name}.${vstring}
set     base            /gpfs/dell2/emc/obsproc/noscrub/Shelley.Melchior/gitstatic/EMC_obsproc_bufr_util

set     fix             ${base}/fix
setenv  FIXbufr_util    ${fix}
prepend-path    PATH    ${fix}
setenv  BUFR_DUMPLIST   ${fix}/bufr_dumplist

set	ush		${base}/ush
setenv	USHbufr_util	${ush}
prepend-path	PATH	${ush} 
setenv	RUN_APXDX	${ush}/run_apxdx.sh
setenv  DUMPJB          ${ush}/dumpjb

set	exec		${base}/exec
setenv	EXECbufr_util	${exec}
prepend-path	PATH	${exec} 
setenv	DEBUFR		${exec}/debufr
setenv	XBFMG		${exec}/xbfmg
